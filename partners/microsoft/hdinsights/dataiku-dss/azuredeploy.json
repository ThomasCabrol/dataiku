{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "metadata": {
                "description": "Name of the existing HDInsight cluster"
            }
        },
        "edgeNodeSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the edge node that hosts the application"
            },
            "defaultValue": "Standard_D12_v2"
        },
        "applicationName": {
            "type": "string",
            "metadata": {
                "description": "Application name"
            },
            "defaultValue": "dss"
        },
        "subdomainSuffix": {
            "type": "string",
            "metadata": {
                "description": "Subdomain suffix (three chars)"
            },
            "defaultValue": "dss"
        },
        "dssVersion": {
            "type": "string",
            "metadata": {
                "description": "DSS version, or 'latest'"
            },
            "defaultValue": "latest"
        }
    },
    "variables": {
        "dssPort": 20000
    },
    "resources": [{
        "name": "[concat(parameters('clusterName'), '/', parameters('applicationName'))]",
        "type": "Microsoft.HDInsight/clusters/applications",
        "apiVersion": "2015-03-01-preview",
        "properties": {
            "computeProfile": {
                "roles": [{
                    "name": "edgenode",
                    "targetInstanceCount": 1,
                    "hardwareProfile": {
                        "vmSize": "[parameters('edgeNodeSize')]"
                    }
                }]
            },
            "installScriptActions": [{
                "name": "[concat('dss-install-', parameters('applicationName'))]",
                "uri": "https://raw.githubusercontent.com/ThomasCabrol/dataiku/master/partners/microsoft/hdinsights/dataiku-dss/scripts/hdinsight-dss-install.sh",
                "parameters": "[concat('-version \"', parameters('dssVersion'), '\" -port ', variables('dssPort'))]",
                "roles": ["edgenode"]
            }],
            "httpsEndpoints": [{
                "subDomainSuffix": "[parameters('subdomainSuffix')]",
                "destinationPort": "[variables('dssPort')]",
                "accessModes": ["WebPage"]
            }],
            "applicationType": "CustomApplication"
        }
    }],
    "outputs": {
        "application": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.HDInsight/clusters/applications/', parameters('clusterName'), parameters('applicationName')))]"
        }
    }
}